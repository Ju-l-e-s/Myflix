{
  "uid": "pi5-architect-v11",
  "title": "Myflix Master Control (v11.4)",
  "panels": [
    {
      "datasource": {"type": "prometheus", "uid": "Prometheus"},
      "fieldConfig": {
        "defaults": {
          "color": {"fixedColor": "blue", "mode": "fixed"}
        }
      },
      "gridPos": {"h": 4, "w": 8, "x": 0, "y": 0},
      "options": {
        "colorMode": "background",
        "reduceOptions": {"calcs": ["lastNotNull"], "fields": "/^ip$/", "values": false},
        "textMode": "value"
      },
      "targets": [
        {
          "expr": "last_over_time(public_ip_info{type='host'}[5m])",
          "format": "table",
          "legendFormat": "{{ip}}",
          "refId": "A"
        }
      ],
      "title": "IP Publique (Host)",
      "type": "stat"
    },
    {
      "datasource": {"type": "prometheus", "uid": "Prometheus"},
      "fieldConfig": {
        "defaults": {
          "color": {"fixedColor": "purple", "mode": "fixed"}
        }
      },
      "gridPos": {"h": 4, "w": 8, "x": 8, "y": 0},
      "options": {
        "colorMode": "background",
        "reduceOptions": {"calcs": ["lastNotNull"], "fields": "/^ip$/", "values": false},
        "textMode": "value"
      },
      "targets": [
        {
          "expr": "last_over_time(myflix_vpn_public_ip[5m])",
          "format": "table",
          "legendFormat": "{{ip}}",
          "refId": "A"
        }
      ],
      "title": "IP Torrent & VPN (Sécurisé)",
      "type": "stat"
    },
    {
      "datasource": {"type": "prometheus", "uid": "Prometheus"},
      "fieldConfig": {
        "defaults": {
          "mappings": [
            {"options": {"0": {"color": "red", "index": 0, "text": "OFFLINE"}, "1": {"color": "green", "index": 1, "text": "ONLINE"}}, "type": "value"}
          ],
          "thresholds": {"mode": "absolute", "steps": [{"color": "red", "value": null}, {"color": "green", "value": 1}]}
        }
      },
      "gridPos": {"h": 4, "w": 8, "x": 16, "y": 0},
      "options": {
        "colorMode": "background",
        "reduceOptions": {"calcs": ["lastNotNull"], "values": false}
      },
      "targets": [
        {
          "expr": "myflix_infra_health_status",
          "refId": "A"
        }
      ],
      "title": "Infrastructure Health",
      "type": "stat"
    },
    {
      "datasource": {"type": "prometheus", "uid": "Prometheus"},
      "fieldConfig": {
        "defaults": {
          "unit": "celsius",
          "thresholds": {"mode": "absolute", "steps": [{"color": "green", "value": null}, {"color": "orange", "value": 65}, {"color": "red", "value": 75}]}
        }
      },
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4},
      "targets": [
        {
          "expr": "node_hwmon_temp_celsius{chip='thermal_thermal_zone0', sensor='temp0'}",
          "legendFormat": "Température",
          "refId": "A"
        }
      ],
      "title": "Température CPU",
      "type": "timeseries"
    },
    {
      "datasource": {"type": "prometheus", "uid": "Prometheus"},
      "fieldConfig": {
        "defaults": {
          "max": 100, "min": 0, "unit": "percent",
          "thresholds": {"mode": "absolute", "steps": [{"color": "green", "value": null}, {"color": "orange", "value": 70}, {"color": "red", "value": 85}]}
        }
      },
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4},
      "options": {"reduceOptions": {"calcs": ["lastNotNull"]}},
      "targets": [
        {
          "expr": "100 - ((node_memory_MemAvailable_bytes * 100) / node_memory_MemTotal_bytes)",
          "refId": "A"
        }
      ],
      "title": "Saturation RAM",
      "type": "gauge"
    },
    {
      "datasource": {"type": "prometheus", "uid": "Prometheus"},
      "fieldConfig": {
        "defaults": {
          "unit": "binBps",
          "custom": {"drawStyle": "line", "fillOpacity": 15, "lineWidth": 2}
        }
      },
      "gridPos": {"h": 10, "w": 24, "x": 0, "y": 12},
      "targets": [
        {
          "expr": "sum by (interface) (irate(container_network_receive_bytes_total{name='gluetun', interface=~'eth0|tun0'}[5m]))",
          "legendFormat": "{{interface}} - Download",
          "refId": "A"
        },
        {
          "expr": "sum by (interface) (irate(container_network_transmit_bytes_total{name='gluetun', interface=~'eth0|tun0'}[5m]))",
          "legendFormat": "{{interface}} - Upload",
          "refId": "B"
        }
      ],
      "title": "Flux Réseau VPN (Optimisé)",
      "type": "timeseries"
    },
    {
      "datasource": {"type": "prometheus", "uid": "Prometheus"},
      "fieldConfig": {
        "defaults": {
          "unit": "decbytes",
          "thresholds": {"mode": "absolute", "steps": [{"color": "green", "value": null}, {"color": "yellow", "value": 70}, {"color": "red", "value": 90}]}
        }
      },
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 22},
      "options": {
        "colorMode": "background",
        "reduceOptions": {"calcs": ["lastNotNull"], "fields": "/Used|Total/", "values": false},
        "textMode": "value_and_name"
      },
      "targets": [
        {
          "expr": "node_filesystem_size_bytes{mountpoint='/'} - node_filesystem_avail_bytes{mountpoint='/'}",
          "legendFormat": "Used",
          "refId": "Used"
        },
        {
          "expr": "node_filesystem_size_bytes{mountpoint='/'}",
          "legendFormat": "Total",
          "refId": "Total"
        }
      ],
      "title": "Stockage NVMe (Hot Tier)",
      "type": "stat"
    },
    {
      "datasource": {"type": "prometheus", "uid": "Prometheus"},
      "fieldConfig": {
        "defaults": {
          "unit": "decbytes",
          "thresholds": {"mode": "absolute", "steps": [{"color": "green", "value": null}, {"color": "yellow", "value": 70}, {"color": "red", "value": 90}]}
        }
      },
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 22},
      "options": {
        "colorMode": "background",
        "reduceOptions": {"calcs": ["lastNotNull"], "fields": "/Used|Total/", "values": false},
        "textMode": "value_and_name"
      },
      "targets": [
        {
          "expr": "node_filesystem_size_bytes{mountpoint='/mnt/externe'} - node_filesystem_avail_bytes{mountpoint='/mnt/externe'}",
          "legendFormat": "Used",
          "refId": "Used"
        },
        {
          "expr": "node_filesystem_size_bytes{mountpoint='/mnt/externe'}",
          "legendFormat": "Total",
          "refId": "Total"
        }
      ],
      "title": "Stockage HDD (Archive)",
      "type": "stat"
    }
  ],
  "refresh": "30s",
  "schemaVersion": 38,
  "timezone": "browser"
}
